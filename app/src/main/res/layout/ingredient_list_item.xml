<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ingredient_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/secondary_text"
        android:text="Ingredient"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ingredient_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary_text"
        tools:text="Black Peppa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ingredient_header" />

    <TextView
        android:id="@+id/tv_measure_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        android:text="Measure: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ingredient_text" />

    <TextView
        android:id="@+id/tv_quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_measure_header"
        android:layout_marginStart="12dp"
        tools:text="2"
        app:layout_constraintStart_toEndOf="@+id/tv_measure_header"
        app:layout_constraintTop_toTopOf="@+id/tv_measure_header" />

    <TextView
        android:id="@+id/tv_measure_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/primary_text"
        tools:text="cups"
        app:layout_constraintBottom_toBottomOf="@+id/tv_quantity_text"
        app:layout_constraintStart_toEndOf="@+id/tv_quantity_text"
        app:layout_constraintTop_toTopOf="@+id/tv_quantity_text" />

</android.support.constraint.ConstraintLayout>