<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment layout that displays a single step of a recipe -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:layout_width="match_parent">

    <TextView xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:text="Fragment Step Text View"
        android:text="Some stuff"
        android:textSize="30sp"
        android:id="@+id/single_step_tv_tester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:id="@+id/tv_video_url"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        tools:text="The Video URL"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tv_long_description"
        tools:text="The long description"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>


